{
  "name": "Blog.Elastic.Query",
  "displayName": "Blog - Elastic Query",
  "description": "Runs the Elastic Search recipe and replaces the RecentBlogPosts SQL Query with an Elastic Query.",
  "author": "The Orchard Core Team",
  "website": "https://orchardcore.net",
  "version": "1.0.0",
  "issetuprecipe": false,
  "categories": [ "default" ],
  "tags": [ "blog", "elastic" ],

  "steps": [
    {
      "name": "recipes",
      "Values": [
        {
          "executionid": "Blog",
          "name": "Blog.Elastic.Search"
        }
      ]
    },
    {
      "name": "queries",
      "Queries": [
        {
          "Source": "Elastic",
          "Name": "RecentBlogPosts",
          "Index": "Search",
          "Template": "[file:text('Snippets/recentBlogPosts.elastic.json')]",
          "Schema": "[js:base64('ew0KICAgICJ0eXBlIjogIkNvbnRlbnRJdGVtL0Jsb2dQb3N0Ig0KfQ==')]",
          "ReturnContentItems": true
        }
      ]
    }
  ]
}
